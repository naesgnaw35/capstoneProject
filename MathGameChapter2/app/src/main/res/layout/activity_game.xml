<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.packetpub.mathgamechapter2.GameActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textBoxedThree"
        android:layout_width="60dp"
        android:layout_height="51dp"
        android:layout_marginStart="42dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginEnd="39dp"
        app:layout_constraintRight_toLeftOf="@+id/textBoxedFour"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="82dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/spinner2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="39dp" />


    <TextView
        android:id="@+id/textBoxedFour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/textBoxedThree"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/spinner3"
        app:layout_constraintTop_toTopOf="@+id/textBoxedThree"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textBoxedTwo"
        android:gravity="center"
        android:layout_width="58dp"
        android:layout_height="0dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintRight_toLeftOf="@+id/textBoxedThree"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/spinner1"
        android:layout_marginStart="38dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinner1"
        app:layout_constraintTop_toTopOf="@+id/textBoxedThree"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="40dp" />

    <TextView
        android:id="@+id/textBoxedOne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/spinner1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textBoxedThree"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textBoxedTwo"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/firstNumber"
        android:layout_width="0dp"
        android:layout_height="74dp"

        android:layout_marginEnd="13dp"
        android:contentDescription="33"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="55sp"
        app:layout_constraintRight_toLeftOf="@+id/secondNumber"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/thirdNumber"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/thirdNumber"
        android:layout_marginRight="13dp" />

    <TextView
        android:id="@+id/secondNumber"
        android:layout_width="89dp"
        android:layout_height="74dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="55sp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="65dp"
        app:layout_constraintRight_toRightOf="@+id/buttonSubmit"
        app:layout_constraintBaseline_toBaselineOf="@+id/firstNumber"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textScore"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="65dp" />

    <TextView
        android:id="@+id/fourthNumber"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="55sp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="6dp"
        app:layout_constraintRight_toLeftOf="@+id/textBoxedFour"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/thirdNumber"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/thirdNumber"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/thirdNumber"
        android:layout_width="87dp"
        android:layout_height="76dp"
        android:layout_marginEnd="107dp"
        android:layout_marginStart="108dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="55sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textScore"
        app:layout_constraintRight_toRightOf="@+id/secondNumber"
        android:layout_marginTop="157dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="157dp"
        app:layout_constraintLeft_toLeftOf="@+id/textBoxedOne"
        app:layout_constraintTop_toTopOf="@+id/spinner3"
        android:layout_marginLeft="108dp"
        android:layout_marginRight="107dp" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:text="Score: 999"
        android:textColor="@android:color/white"
        android:textSize="23sp"

        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="39dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="48dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textBoxedThree"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="59dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/spinner2"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/spinner2"
        app:layout_constraintLeft_toRightOf="@+id/spinner2"
        android:layout_marginLeft="61dp"
        android:layout_marginRight="59dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_marginEnd="46dp"
        app:layout_constraintRight_toLeftOf="@+id/spinner2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/spinner2"
        app:layout_constraintTop_toTopOf="@+id/spinner2"
        android:layout_marginRight="46dp" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp" />


</android.support.constraint.ConstraintLayout>
