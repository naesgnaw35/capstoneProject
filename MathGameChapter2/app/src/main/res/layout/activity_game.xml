<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.packetpub.mathgamechapter2.GameActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/firstNumber"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:contentDescription="33"

        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="55sp"
        app:layout_constraintRight_toLeftOf="@+id/secondNumber"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="13dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="184dp"
        app:layout_constraintLeft_toLeftOf="@+id/thirdNumber"
        android:layout_marginRight="13dp" />

    <TextView
        android:id="@+id/secondNumber"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="55sp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/fourthNumber"
        app:layout_constraintBaseline_toBaselineOf="@+id/firstNumber"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/fourthNumber" />

    <TextView
        android:id="@+id/fourthNumber"
        android:layout_width="90dp"
        android:layout_height="76dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="55sp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="54dp"
        app:layout_constraintRight_toRightOf="@+id/textLevel"
        app:layout_constraintBaseline_toBaselineOf="@+id/thirdNumber"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="54dp" />

    <TextView
        android:id="@+id/thirdNumber"
        android:layout_width="87dp"
        android:layout_height="76dp"
        android:layout_marginEnd="106dp"
        android:layout_marginStart="106dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="55sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/fourthNumber"
        android:layout_marginTop="91dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="93dp"
        app:layout_constraintLeft_toLeftOf="@+id/textBoxedOne"
        app:layout_constraintTop_toTopOf="@+id/firstNumber"
        android:layout_marginLeft="106dp"
        android:layout_marginRight="106dp" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:text="Score: 999"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="39dp" />

    <TextView
        android:id="@+id/textLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:text="Level: 4"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="26dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="48dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="61dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/spinner2"
        app:layout_constraintRight_toRightOf="@+id/textView5"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner2"
        android:layout_marginLeft="61dp"
        android:layout_marginRight="60dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_marginEnd="62dp"
        android:layout_marginStart="60dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/spinner2"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/spinner2"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="62dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:background="@android:color/white"
        android:layout_marginStart="46dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/spinner2"
        android:layout_marginLeft="46dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/spinner3"
        android:layout_marginRight="2dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginEnd="105dp"
        android:layout_marginStart="104dp"
        android:background="@android:color/white"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        app:layout_constraintBaseline_toBaselineOf="@+id/textBoxedOne"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textBoxedOne"
        android:layout_marginLeft="104dp"
        android:layout_marginRight="105dp" />

    <TextView
        android:id="@+id/textBoxedOne"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginStart="5dp"
        android:background="@android:color/white"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="85dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp" />

</android.support.constraint.ConstraintLayout>
